{
    "manifest_version": 3,
    "name": "Copiar Catalogo",
    "version": "1.0",
    "description": "Extensão para copiar o catálogo do hotel",
    "permissions": [
        "storage",
        "declarativeContent",
        "activeTab",
        "scripting",
        "tabs",
        "nativeMessaging",
        "webNavigation",
        "webRequest"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}